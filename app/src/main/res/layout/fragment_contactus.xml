<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/contactUstitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Contact Us"
        android:textSize="25dp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"/>

    <ImageView
        android:id="@+id/applogo"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_below="@+id/contactUstitle"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="55dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="55dp"
        android:gravity="center"
        android:src="@drawable/logo" />

    <ImageView
        android:id="@+id/phone"
        android:layout_width="51dp"
        android:layout_height="46dp"
        android:layout_below="@+id/applogo"
        android:layout_alignParentStart="true"
        android:layout_marginStart="41dp"
        android:layout_marginTop="47dp"
        android:src="@drawable/ic_baseline_local_phone_" />

    <TextView
        android:id="@+id/ManagementName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/applogo"
        android:layout_marginStart="6dp"
        android:layout_marginTop="48dp"
        android:layout_toEndOf="@+id/phone"
        android:text="Management Department"
        android:textSize="15dp"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/phoneNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ManagementName"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:layout_toEndOf="@+id/phone"
        android:text="0123456789"
        android:textSize="17dp"
        android:textColor="#000000"/>

    <ImageView
        android:id="@+id/mail"
        android:layout_width="51dp"
        android:layout_height="44dp"
        android:layout_below="@+id/phone"
        android:layout_marginTop="26dp"
        android:layout_marginStart="41dp"
        android:src="@drawable/ic_baseline_mail" />

    <TextView
        android:id="@+id/ManagementName2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phoneNo"
        android:layout_marginStart="5dp"
        android:layout_marginTop="25dp"
        android:layout_toEndOf="@+id/mail"
        android:text="Management Department"
        android:textColor="#000000"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ManagementName2"
        android:layout_marginStart="6dp"
        android:layout_marginTop="4dp"
        android:layout_toEndOf="@+id/mail"
        android:text="management@myresident.com"
        android:textColor="#000000" />

    <Button
        android:id="@+id/buttonbackFromCon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email"
        android:layout_marginStart="0dp"
        android:layout_marginTop="16dp"
        android:background="@color/colorAccent"
        android:text="Back to Home" />

</RelativeLayout>