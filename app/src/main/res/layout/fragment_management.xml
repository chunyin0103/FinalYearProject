<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:id="@+id/securityTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Management Department"
        android:textStyle="bold"
        android:textColor="#000000"
        android:textSize="25dp" />

  <LinearLayout
      android:layout_marginTop="100dp"
      android:orientation="vertical"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
      <TextView
          android:id="@+id/operatingtime"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="Operation Time:"
          android:textStyle="bold"
          android:textColor="#000000"
          android:textSize="20dp" />
      <TextView
          android:id="@+id/OPdate"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="Weekday Operation(Mon-Fri)"
          android:textStyle="bold"
          android:textColor="#000000"
          android:textSize="20dp"/>
      <TextView
          android:id="@+id/Optime"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="9am - 6pm"
          android:textStyle="bold"
          android:textColor="#000000"
          android:textSize="20dp"/>
      <Button
          android:id="@+id/buttonBackToHome"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="25dp"
          android:layout_marginRight="25dp"
          android:layout_gravity="right"
          android:text="Back to HomePage"
          android:background="@color/colorAccent"/>
  </LinearLayout>

</LinearLayout>